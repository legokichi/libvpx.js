{
  "name": "libvpx",
  "version": "0.0.0",
  "scripts": {
    "setup": "npm install -g http-server; mkdir src lib",
    "init": "npm run update; npm run build",
    "update": "npm update",
    "build": "npm run clean && tsc -p .   && npm run browserify",
    "start": "http-server -s & tsc -w -p . & npm run watchify",
    "stop": "killall -- node",
    "check": "tsc -w --noEmit -p ./",
    "lint": "tslint -c ./tslint.json --project ./tsconfig.json --type-check",
    "doc": "typedoc --mode modules --out doc --disableOutputCheck",
    "reset": "rm -rf node_modules",
    "clean": "rm -rf lib/*",
    "browserify": "browserify lib/index.js --standalone VPX -o src/index.js",
    "watchify":   "watchify lib/index.js   --standalone VPX -o src/index.js -v"
  },
  "devDependencies": {
    "@types/emscripten": "0.0.29",
    "@types/node": "0.0.3",
    "browserify": "^13.1.0",
    "tslint": "^3.15.1",
    "typedoc": "^0.5.3",
    "typescript": "^2.0.3",
    "watchify": "^3.7.0"
  },
  "dependencies": {},
  "typings": "./lib/index.d.ts",
  "main": "./dist/index.js",
  "author": {
    "name": "legokichi"
  }
}
